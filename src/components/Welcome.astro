---
import Greet from "./Greet.svelte";
---

<main class="h-full w-full p-5">
    <div class="justify-center items-center w-full flex flex-col gap-10 p-10">
        <img
            src="/assets/avatar.png"
            class="w-1/8 md:w-1/8 xl:w-1/16 rounded-full"
        />

        <Greet name="Harrow Fung" class="p-4" />

        <div class="text-center text-lg">
            <p>Just a student who likes to code and make things.</p>
        </div>

        <div class="w-full mx-5 flex flex-row justify-center gap-5">
            <a
                href="https://github.com/cattodotpy"
                class="bg-gray-800 e p-3 rounded-2xl flex-row w-fit gap-2 text-2xl shadow-2xl font-semibold flex transition hover:-translate-y-1 select-none"
            >
                <img
                    alt="GitHub Link"
                    src="/assets/mdi--github.svg"
                    class="invert size-8"
                    aria-label="GitHub"
                    aria-roledescription="link"
                />
            </a>

            <a
                href="https://discord.com/users/994830124165906444"
                class="bg-indigo-800 p-3 rounded-2xl flex-row w-fit gap-2 text-2xl shadow-2xl font-semibold flex transition hover:-translate-y-1 select-none text-center"
            >
                <div class="flex flex-row gap-2 text-center">
                    <img
                        alt="Discord Link"
                        src="/assets/ic--baseline-discord.svg"
                        class="invert size-8"
                        aria-label="Discord"
                        aria-roledescription="link"
                    />

                    <span
                        class="text-white text-sm text-center relative top-1/6"
                        >caatto</span
                    >
                </div>
            </a>

            <!-- seperator -->
        </div>
    </div>

    <div class="w-3/4 h-0.5 bg-gray-500 my-10 mx-auto"></div>

    <div class="flex flex-col gap-4">
        <h1 class="text-3xl font-bold text-center">Projects</h1>
        <div class="flex flex-row justify-center text-center gap-5 text-2xl">
            <p>404 Not Found <span class="text-sm">(yet)</span></p>
        </div>
    </div>
</main>
